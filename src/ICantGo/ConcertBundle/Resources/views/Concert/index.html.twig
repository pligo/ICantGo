{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Concert list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idstage</th>
                <th>Dateconcert</th>
                <th>Artist</th>
                <th>Hbegin</th>
                <th>Hending</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('concert_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idStage }}</td>
                <td>{% if entity.dateConcert %}{{ entity.dateConcert|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.artist }}</td>
                <td>{% if entity.hBegin %}{{ entity.hBegin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.hEnding %}{{ entity.hEnding|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('concert_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('concert_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('concert_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
